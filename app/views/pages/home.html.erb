        <div class="p-8 rounded-3xl bg-white border-2 border-stone-900 shadow-[8px_8px_0px_0px_#1c1917] hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-[6px_6px_0px_0px_#1c1917] transition-all">
