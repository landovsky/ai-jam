        <div class="p-8 rounded-3xl bg-white border-2 border-stone-900 shadow-[8px_8px_0px_0px_#1c1917] hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-[6px_6px_0px_0px_#1c1917] transition-all">
          <div class="w-16 h-16 bg-orange-200 rounded-2xl flex items-center justify-center mb-6 text-stone-900 border-2 border-stone-900 shadow-[4px_4px_0px_0px_#1c1917]">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor" class="w-8 h-8">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.182 15.182a4.5 4.5 0 01-6.364 0M21 12a9 9 0 11-18 0 9 9 0 0118 0zM9.75 9.75c0 .414-.168.75-.375.75S9 10.164 9 9.75 9.168 9 9.375 9s.375.336.375.75zm-.375 0h.008v.015h-.008V9.75zm5.625 0c0 .414-.168.75-.375.75s-.375-.336-.375-.75.168-.75.375-.75.375.336.375.75zm-.375 0h.008v.015h-.008V9.75z" />
            </svg>
          </div>
          <h3 class="text-2xl font-black mb-3"><%= t('homepage.who_is_this_for.imposter.title') %></h3>
          <p class="text-stone-700 font-medium leading-relaxed"><%= t('homepage.who_is_this_for.imposter.description') %></p>
        </div>
      </div>
    </div>
  </section>

  <!-- Recipe Gallery Section -->
  <section id="recipes" class="py-24 px-6 bg-white border-b-4 border-stone-900">
    <div class="max-w-6xl mx-auto">
      <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-4">
        <div>
          <h2 class="text-4xl md:text-5xl font-black mb-4 text-stone-900"><%= t('homepage.recipes.title') %></h2>
          <p class="text-xl font-bold text-stone-600"><%= t('homepage.recipes.subtitle') %></p>
        </div>
        <a href="#" class="inline-flex items-center text-stone-900 font-bold hover:text-orange-600 transition-colors text-lg border-b-2 border-stone-900">
          <%= t('homepage.recipes.view_all') %> <span aria-hidden="true" class="ml-2">&rarr;</span>
        </a>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Recipe Card 1 -->
        <article class="bg-white rounded-3xl border-2 border-stone-900 shadow-[8px_8px_0px_0px_#1c1917] overflow-hidden hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-[6px_6px_0px_0px_#1c1917] transition-all cursor-pointer group">
          <div class="h-48 bg-slate-100 flex items-center justify-center p-6 border-b-2 border-stone-900">
            <div class="text-7xl transform group-hover:scale-110 transition-transform">üóÑÔ∏è</div>
          </div>
          <div class="p-8">
            <div class="flex gap-2 mb-4">
              <span class="px-3 py-1 bg-white border-2 border-stone-900 text-stone-900 text-xs font-bold rounded-lg shadow-[2px_2px_0px_0px_#1c1917]">#Database</span>
              <span class="px-3 py-1 bg-purple-200 border-2 border-stone-900 text-stone-900 text-xs font-bold rounded-lg shadow-[2px_2px_0px_0px_#1c1917]">#Claude</span>
            </div>
            <h3 class="text-2xl font-black mb-3 group-hover:text-orange-600 transition-colors"><%= t('homepage.recipes.card_1.title') %></h3>
            <p class="text-stone-700 font-medium text-sm mb-6"><%= t('homepage.recipes.card_1.description') %></p>
            <div class="flex items-center justify-between pt-4 border-t-2 border-stone-100">
              <span class="text-xs font-bold text-stone-500"><%= t('homepage.recipes.card_1.author') %></span>
              <span class="text-stone-900 text-sm font-black group-hover:underline"><%= t('homepage.recipes.read_recipe') %></span>
            </div>
          </div>
        </article>

        <!-- Recipe Card 2 -->
        <article class="bg-white rounded-3xl border-2 border-stone-900 shadow-[8px_8px_0px_0px_#1c1917] overflow-hidden hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-[6px_6px_0px_0px_#1c1917] transition-all cursor-pointer group">
          <div class="h-48 bg-green-100 flex items-center justify-center p-6 border-b-2 border-stone-900">
             <div class="text-7xl transform group-hover:scale-110 transition-transform">‚öôÔ∏è</div>
          </div>
