<div class="bg-amber-50 min-h-screen font-sans text-stone-900 selection:bg-orange-300 selection:text-stone-900">
  <!-- Hero Section -->
  <section class="relative bg-amber-100 text-stone-900 py-24 px-6 overflow-hidden border-b-4 border-stone-900">
    <!-- Language Switcher -->
    <div class="absolute top-6 right-6 z-20 flex gap-3">
      <%= link_to "EN", root_path(locale: :en), class: "font-black text-sm px-3 py-1 bg-white border-2 border-stone-900 shadow-[3px_3px_0px_0px_#1c1917] hover:translate-x-[1px] hover:translate-y-[1px] hover:shadow-[2px_2px_0px_0px_#1c1917] transition-all #{I18n.locale == :en ? 'bg-orange-300' : ''}" %>
      <%= link_to "CS", root_path(locale: :cs), class: "font-black text-sm px-3 py-1 bg-white border-2 border-stone-900 shadow-[3px_3px_0px_0px_#1c1917] hover:translate-x-[1px] hover:translate-y-[1px] hover:shadow-[2px_2px_0px_0px_#1c1917] transition-all #{I18n.locale == :cs ? 'bg-orange-300' : ''}" %>
    </div>

    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10 bg-[radial-gradient(#1c1917_2px,transparent_2px)] [background-size:24px_24px] z-0"></div>

    <!-- Jam Jar Illustrations -->
    <div class="absolute top-20 left-6 md:left-12 z-10 hidden md:block transform rotate-12 hover:rotate-6 transition-transform duration-300">
      <%= image_tag "homepage/jam_jar_left.svg", class: "drop-shadow-[6px_6px_0px_rgba(28,25,23,1)]", alt: "AI Jam Jar" %>
    </div>

    <div class="absolute top-32 right-6 md:right-12 z-10 hidden md:block transform -rotate-12 hover:-rotate-6 transition-transform duration-300">
      <%= image_tag "homepage/jam_jar_right.svg", class: "drop-shadow-[6px_6px_0px_rgba(28,25,23,1)]", alt: "Jam Jar" %>
    </div>

    <div class="max-w-4xl mx-auto text-center relative z-10">
      <div class="mb-6">
        <h1 class="text-7xl md:text-9xl font-black text-orange-500 tracking-tighter transform -rotate-3 drop-shadow-[4px_4px_0px_rgba(28,25,23,1)]" style="-webkit-text-stroke: 3px #1c1917;">
          <%= t('homepage.hero.brand') %>
        </h1>
      </div>

      <div class="inline-block px-4 py-2 mb-8 text-sm font-black tracking-widest uppercase bg-white border-2 border-stone-900 shadow-[4px_4px_0px_0px_#1c1917] rounded-full transform rotate-2">
        <%= t('homepage.hero.badge') %>
      </div>
      <h2 class="text-5xl md:text-7xl font-black tracking-tight mb-8 text-stone-900 drop-shadow-sm">
        <%= t('homepage.hero.title_html') %>
      </h2>
      <p class="text-xl md:text-3xl font-bold text-stone-700 mb-12 max-w-2xl mx-auto leading-relaxed">
        <%= t('homepage.hero.subtitle_html') %>
      </p>
      <div class="flex flex-col md:flex-row justify-center gap-6">
        <a href="#join" class="bg-orange-500 text-white font-black py-4 px-10 rounded-xl border-2 border-stone-900 shadow-[6px_6px_0px_0px_#1c1917] hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-[4px_4px_0px_0px_#1c1917] transition-all text-xl">
          <%= t('homepage.hero.cta_join') %>
        </a>
        <a href="#how-it-works" class="bg-white text-stone-900 font-black py-4 px-10 rounded-xl border-2 border-stone-900 shadow-[6px_6px_0px_0px_#1c1917] hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-[4px_4px_0px_0px_#1c1917] transition-all text-xl">
          <%= t('homepage.hero.cta_how') %>
        </a>
      </div>
    </div>
  </section>

  <!-- How We Jam Section -->
  <section id="how-it-works" class="py-24 px-6 bg-white border-b-4 border-stone-900">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-20">
        <h2 class="text-4xl md:text-5xl font-black mb-6 text-stone-900"><%= t('homepage.how_it_works.title') %></h2>
        <p class="text-xl font-bold text-stone-600"><%= t('homepage.how_it_works.subtitle') %></p>
      </div>

      <div class="grid md:grid-cols-3 gap-12 relative">
        <!-- Connecting Line (Desktop) -->
        <div class="hidden md:block absolute top-16 left-0 w-full h-1 bg-stone-900 border-b-2 border-stone-900 border-dashed -z-10 opacity-20"></div>

        <!-- Step 1 -->
        <div class="relative bg-white p-6 pt-0 text-center group">
          <div class="w-32 h-32 mx-auto bg-amber-100 rounded-full flex items-center justify-center mb-8 border-4 border-stone-900 shadow-[6px_6px_0px_0px_#1c1917] overflow-hidden transition-transform transform group-hover:scale-110 group-hover:-rotate-3">
            <%= image_tag "homepage/jam_download.png", class: "w-full h-full object-cover", alt: "The Download" %>
          </div>
          <h3 class="text-2xl font-black mb-4 bg-stone-900 text-white inline-block px-3 py-1 transform -rotate-1"><%= t('homepage.how_it_works.step_1.title') %></h3>
          <p class="text-stone-700 font-medium text-lg"><%= t('homepage.how_it_works.step_1.description') %></p>
        </div>

        <!-- Step 2 -->
        <div class="relative bg-white p-6 pt-0 text-center group">
          <div class="w-32 h-32 mx-auto bg-orange-100 rounded-full flex items-center justify-center mb-8 border-4 border-stone-900 shadow-[6px_6px_0px_0px_#1c1917] overflow-hidden transition-transform transform group-hover:scale-110 group-hover:rotate-3">
             <%= image_tag "homepage/jam_work.png", class: "w-full h-full object-cover", alt: "The Work Session" %>
          </div>
          <h3 class="text-2xl font-black mb-4 bg-stone-900 text-white inline-block px-3 py-1 transform rotate-1"><%= t('homepage.how_it_works.step_2.title') %></h3>
          <p class="text-stone-700 font-medium text-lg"><%= t('homepage.how_it_works.step_2.description') %></p>
        </div>

        <!-- Step 3 -->
        <div class="relative bg-white p-6 pt-0 text-center group">
          <div class="w-32 h-32 mx-auto bg-amber-100 rounded-full flex items-center justify-center mb-8 border-4 border-stone-900 shadow-[6px_6px_0px_0px_#1c1917] overflow-hidden transition-transform transform group-hover:scale-110 group-hover:-rotate-2">
             <%= image_tag "homepage/jam_share.png", class: "w-full h-full object-cover", alt: "The Show & Tell" %>
          </div>
          <h3 class="text-2xl font-black mb-4 bg-stone-900 text-white inline-block px-3 py-1 transform -rotate-1"><%= t('homepage.how_it_works.step_3.title') %></h3>
          <p class="text-stone-700 font-medium text-lg"><%= t('homepage.how_it_works.step_3.description') %></p>
        </div>
      </div>
    </div>
  </section>

  <!-- Who is this for Section -->
