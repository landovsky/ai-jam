<%= link_to recipe_path(recipe), class: "block" do %>
  <article class="bg-white rounded-3xl border-2 border-stone-900 shadow-[8px_8px_0px_0px_#1c1917] overflow-hidden hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-[6px_6px_0px_0px_#1c1917] transition-all cursor-pointer group h-full flex flex-col">
    <!-- Recipe Image/Icon -->
    <div class="h-48 bg-slate-100 flex items-center justify-center p-6 border-b-2 border-stone-900">
      <% if recipe.image.present? %>
        <div class="text-7xl transform group-hover:scale-110 transition-transform"><%= recipe.image %></div>
      <% else %>
        <div class="text-7xl transform group-hover:scale-110 transition-transform">üìù</div>
      <% end %>
    </div>

    <!-- Recipe Content -->
    <div class="p-8 flex-1 flex flex-col">
      <!-- Tags -->
      <% if recipe.tags.present? %>
        <div class="flex flex-wrap gap-2 mb-4">
          <% recipe.tags.first(3).each_with_index do |tag, index| %>
            <% colors = ['bg-white', 'bg-purple-200', 'bg-green-200', 'bg-yellow-200', 'bg-orange-200'] %>
            <span class="px-3 py-1 <%= colors[index % colors.length] %> border-2 border-stone-900 text-stone-900 text-xs font-bold rounded-lg shadow-[2px_2px_0px_0px_#1c1917]">
              #<%= tag %>
            </span>
          <% end %>
          <% if recipe.tags.length > 3 %>
            <span class="px-3 py-1 bg-white border-2 border-stone-900 text-stone-900 text-xs font-bold rounded-lg shadow-[2px_2px_0px_0px_#1c1917]">
              +<%= recipe.tags.length - 3 %>
            </span>
          <% end %>
        </div>
      <% end %>

      <!-- Title -->
      <h3 class="text-2xl font-black mb-3 group-hover:text-orange-600 transition-colors">
        <%= recipe.title %>
      </h3>

      <!-- Description (truncated content) -->
      <p class="text-stone-700 font-medium text-sm mb-6 flex-1">
        <%= truncate(recipe.content, length: 120) %>
      </p>

      <!-- Footer -->
      <div class="flex items-center justify-between pt-4 border-t-2 border-stone-100">
        <span class="text-xs font-bold text-stone-500">
          <% if recipe.author.present? %>
            <%= recipe.author.name %>
          <% else %>
            <%= t('recipes.anonymous') %>
          <% end %>
        </span>
        <span class="text-stone-900 text-sm font-black group-hover:underline">
          <%= t('recipes.read_recipe') %>
        </span>
      </div>

      <!-- Draft Badge (only visible to authorized users) -->
      <% if !recipe.published? && signed_in? %>
        <div class="mt-3">
          <span class="inline-block px-3 py-1 bg-amber-200 border-2 border-stone-900 text-stone-900 text-xs font-bold rounded-lg shadow-[2px_2px_0px_0px_#1c1917]">
            <%= t('recipes.draft') %>
          </span>
        </div>
      <% end %>
    </div>
  </article>
<% end %>
